{
	"env": {
		"es2021": true,
		"browser": true,
		"react-native/react-native": true
	},
	"extends": ["plugin:react/recommended", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react-native"],
	"rules": {
		// allow .js files to contain JSX code
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
